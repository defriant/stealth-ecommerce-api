{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ES2020",

        /* Modules */
        "module": "NodeNext",
        "baseUrl": "src",

        /* Emit */
        "sourceMap": true,
        "outDir": "dist",

        /* Interop Constraints */
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "noImplicitAny": true,

        /* Completeness */
        "skipLibCheck": true
    },
    "include": ["src"]
}
